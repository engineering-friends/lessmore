{
  "manifest_version": 3,
  "name": "Pure Monitor",
  "version": "1.0",
  "description": "Reloads the page every 30 seconds, checks conditions and plays a sound notification.",
  "permissions": ["tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
