<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.marklidenberg.stepwisefold</id>
    <name>Stepwise Fold</name>
    <vendor email="marklidenberg@gmail.com">Mark Lidenberg</vendor>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <actions>
<!--        // to run this action: shift+shift -> Show Hello World-->
        <action class="com.github.marklidenberg.stepwisefold.ShowHelloWorldAction"
                id="HelloWorldShower.ShowHelloWorld"
                text="Show Hello World"
                description="Show hello world like toast in android"/>

        <action
                id="com.github.marklidenberg.stepwisefold.FoldCustomRegionsAction"
                class="com.github.marklidenberg.stepwisefold.FoldCustomRegionsAction"
                text="Fold Wise"
                description="Folds all custom regions in the current file"
                icon="AllIcons.Actions.Collapseall" />

<!--        &lt;!&ndash; Keymap for macOS &ndash;&gt;-->
<!--        <keyboard-shortcut-->
<!--                actionId="com.github.marklidenberg.stepwisefold.FoldCustomRegionsAction"-->
<!--                keymap="Mac OS X"-->
<!--                first-keystroke="meta shift alt MINUS"-->
<!--                second-keystroke="" />-->
    </actions>
    <extensions defaultExtensionNs="com.intellij">
        <lang.foldingBuilder language="Python"
        implementationClass="com.github.marklidenberg.stepwisefold.CustomFoldingBuilder"/>
    </extensions>

</idea-plugin>
